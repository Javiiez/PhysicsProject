#include <dht.h>

dht DHT;

#define DHT11_PIN 7
#define TEMP_THRESHOLD_HIGH 25 //  value to set the temperature threshold for both LEDs to light up
#define TEMP_THRESHOLD_LOW 20  // value to set the temperature threshold for only one LED to light up

const int ledPin1 = 10; // First LED connected to pin 10
const int ledPin2 = 11; // Second LED connected to pin 11

void setup() {
  Serial.begin(9600);
  pinMode(ledPin1, OUTPUT); // Initialize the LED pins as outputs
  pinMode(ledPin2, OUTPUT);
}

void loop() {
  int chk = DHT.read11(DHT11_PIN);
  Serial.print("Temperature = ");
  Serial.println(DHT.temperature);
  Serial.print("Humidity = ");
  Serial.println(DHT.humidity);

  if (DHT.temperature > TEMP_THRESHOLD_HIGH) {
    digitalWrite(ledPin1, HIGH); // Turn on both LEDs
    digitalWrite(ledPin2, HIGH);
  } else if (DHT.temperature > TEMP_THRESHOLD_LOW) {
    digitalWrite(ledPin1, HIGH); // Turn on only one LED
    digitalWrite(ledPin2, LOW);
  } else {
    digitalWrite(ledPin1, LOW); // Turn off both LEDs
    digitalWrite(ledPin2, LOW);
  }
  
  delay(1000);
}
